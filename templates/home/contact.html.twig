{% extends 'homebase.html.twig' %}

{% block title %}İletişim{% endblock %}
{% block keywords %}{{ setting[0].keywords }}{% endblock %}
{% block description %}{{ setting[0].description }}{% endblock %}

{% block body %}

    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="{{ path('app_home') }}">Home</a>
                    <span class="breadcrumb-item active">Contact</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Contact Start -->
    <div class="container-fluid">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Contact Us</span></h2>
        {{ include('messages.html.twig') }}
        <div class="row px-xl-5">
            <div class="col-lg-7 mb-5">
                <div class="contact-form bg-light p-30">
                    <div id="success"></div>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-warning">{{ button_label|default('Gönder') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col-lg-5 mb-5">
                <div class="bg-light p-30 mb-3">
                    <h4>İletişim Bilgileri</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>{{ setting[0].address }}</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>{{ setting[0].email }}</p>
                    <p class="mb-2"><i class="fa fa-phone-alt text-primary mr-3"></i>{{ setting[0].phone }}</p>
                    {{ setting[0].contact|raw }}
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->


{% endblock %}


