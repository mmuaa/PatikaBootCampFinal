{% extends 'homebase.html.twig' %}

{% block title %}{{ setting[0].title }}{% endblock %}

{% block keywords %}{{ setting[0].keywords }}{% endblock %}

{% block description %}{{ setting[0].description }}{% endblock %}

{% block body %}

    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="{{ path('app_home') }}">Anasayfa</a>
                    <a class="breadcrumb-item text-dark" href="">Tüm Ürünler</a>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Shop Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-4">
                <!-- Price Start -->
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by Categories</span></h5>
                <div class="bg-light p-4 mb-30">
                    {% for cats in categories %}
                        {{ cats|raw }}
                    {% endfor %}
                </div>
                <!-- Price End -->
            </div>
            <!-- Shop Sidebar End -->


            <!-- Shop Product Start -->
            <div class="col-lg-9 col-md-8">
                <div class="row pb-3">
                    {% for prod in product %}
                        <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
                            <div class="product-item bg-light mb-4">
                                <div class="product-img position-relative overflow-hidden">
                                    <img class="img-fluid w-100" style="width: 300px;height: 400px" src="{{ asset('uploads/images/' ~ prod.image) }}" alt="">
                                </div>
                                <div class="text-center py-4">
                                    <a class="h6 text-decoration-none text-truncate" href="{{ path('app_product_show',{'id' : prod.id }) }}">{{ prod.title }}</a>
                                    <div class="d-flex align-items-center justify-content-center mt-2">
                                        <h5>{{ prod.price }}Tl</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <!-- Shop Product End -->
        </div>
    </div>
    <!-- Shop End -->

{% endblock %}