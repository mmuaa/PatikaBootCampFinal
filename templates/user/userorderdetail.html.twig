{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Kullanıcı Sayfası{% endblock %}

{% block body %}
    {% include "user/usermenu.html.twig" %}
    <div class="px-xl-7">
        Sipariş Detayı

        <table class="table">
            <tbody>
            <tr>
                <th>Ürün isimleri</th>
                <td>
                    {% for prod in products %}
                    {{ prod[0].title  }},
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ order.surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ order.email }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ order.price }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    </div>
    </div>
{% endblock %}
