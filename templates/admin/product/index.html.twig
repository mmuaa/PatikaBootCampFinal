{% extends 'adminbase.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}

    <script language="JavaScript" type="text/javascript">
        function openWin( windowURL, windowName, windowFeatures ) { window.open( windowURL, windowName, windowFeatures ) ; 	}
    </script>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Home</a></li>
                        <li class="breadcrumb-item active">Product</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ürünler</h3>

                <div class="card-tools">
                    <a href="{{ path('app_admin_product_new') }}" class="btn btn-primary">Ürün Ekle</a>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categories</th>
                <th>Title</th>
                <th>Image</th>
                <th>Detail</th>
                <th>Price</th>
                <th>Status</th>
                <th></th>
                <th>actions</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>
                    {% for category in product.category %}
                        {{ category.title }},
                    {% endfor %}
                </td>
                <td>{{ product.title }}</td>
                <td><a href="javascript:openWin('{{ path('app_admin_image_new', {'id': product.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                        <img src="{{ asset('uploads/images/' ~ product.image) }}." style="height: 30px">
                    </a></td>
                <td>{{ product.detail }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.status }}</td>
                <td>
                    <a class="btn btn-block btn-info" href="{{ path('app_admin_product_show', {'id': product.id}) }}">show</a>
                </td>
                <td>
                    <a class="btn btn-block btn-warning" href="{{ path('app_admin_product_edit', {'id': product.id}) }}">edit</a>
                </td>
                <td>
                    {{ include('admin/product/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                Footer
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
    <!-- /.content-wrapper -->
{% endblock %}
